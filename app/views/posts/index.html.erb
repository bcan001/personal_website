<h1>Listing all blog posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |k| %>
    <tr>
      <td><%= k.title %></td>
      <td><%= k.text %></td>
      <td><%= link_to 'Show', post_path(k) %></td>
      <td><%= link_to 'Edit', edit_post_path(k) %></td>
      <td><%= link_to 'Destroy', post_path(k),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back to home', root_path %>